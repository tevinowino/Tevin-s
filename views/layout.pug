          div(class="w-full md:w-1/3 text-center md:text-right text-yellow-800")
            h4(class="text-lg font-semibold mb-2") Visit Our Branches
            p(class="text-black") Burger City, FL
            p(class="text-black") Grill Town, CA
            p(class="text-black") Steak Street, NY

      //- Bottom Text
      div(class="text-center mt-6")
        p(class="text-black") &copy; 2024 Tevin's Restaurant. All rights reserved.

    script(src='/script.js')
