extends layout

block content
  //- Hero Section
  section(class="relative bg-gray-900 text-white mb-4")
    img(src="https://cdn.pixabay.com/photo/2022/05/22/13/21/healthy-7213383_1280.jpg", alt="Gallery Banner", class="w-full h-[70vh] object-cover")
    div(class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center")
      div(class="text-center")
        h1(class="text-4xl md:text-6xl font-bold font-dancingscript mb-4") Our Gallery
        p(class="text-lg md:text-xl") Experience the flavors and ambiance of Tevin's

  //- Gallery Section
  section(class="py-16 bg-gray-100")
    div(class="container mx-auto px-4")
      h2(class="text-4xl font-semibold font-dancingscript text-center mb-8") A Taste of Tevin's
      div(class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8")
        
        //- Gallery Image 1
        div(class="overflow-hidden rounded-lg shadow-md")
          img(src="https://cdn.pixabay.com/photo/2014/12/15/14/05/salad-569156_1280.jpg", alt="Dish 1", class="w-full h-64 object-cover transition-transform duration-300 hover:scale-105")
        
        //- Gallery Image 2
        div(class="overflow-hidden rounded-lg shadow-md")
          img(src="https://cdn.pixabay.com/photo/2016/11/18/15/53/breakfast-1835478_1280.jpg", alt="Dish 2", class="w-full h-64 object-cover transition-transform duration-300 hover:scale-105")

        //- Gallery Image 3
        div(class="overflow-hidden rounded-lg shadow-md")
          img(src="https://cdn.pixabay.com/photo/2013/12/31/21/47/restaurant-237060_1280.jpg", alt="Dish 3", class="w-full h-64 object-cover transition-transform duration-300 hover:scale-105")

        //- Gallery Image 4
        div(class="overflow-hidden rounded-lg shadow-md")
          img(src="https://cdn.pixabay.com/photo/2017/08/10/04/49/restaurant-2618315_1280.jpg", alt="Dish 4", class="w-full h-64 object-cover transition-transform duration-300 hover:scale-105")

        //- Gallery Image 5
        div(class="overflow-hidden rounded-lg shadow-md")
          img(src="https://cdn.pixabay.com/photo/2022/06/03/16/25/family-7240486_1280.jpg", alt="Dish 5", class="w-full h-64 object-cover transition-transform duration-300 hover:scale-105")

        //- Gallery Image 6
        div(class="overflow-hidden rounded-lg shadow-md")
          img(src="https://cdn.pixabay.com/photo/2016/11/21/13/04/alcoholic-beverages-1845295_1280.jpg", alt="Dish 6", class="w-full h-64 object-cover transition-transform duration-300 hover:scale-105")

      div(class="text-center mt-8")
        a(href="#", class="inline-block bg-yellow-500 text-black font-semibold py-2 px-4 rounded hover:bg-yellow-600 transition duration-300") View More

